; Custom PHP configuration untuk upload gambar tanpa error
; Letakkan file ini di root WordPress atau di folder wp-content

; Nonaktifkan semua error reporting untuk upload
display_errors = Off
log_errors = Off
error_reporting = 0

; Tingkatkan limit untuk upload
upload_max_filesize = 100M
post_max_size = 100M
memory_limit = 512M
max_execution_time = 300
max_input_time = 300

; Nonaktifkan image processing yang bermasalah
gd.jpeg_ignore_warning = 1

; Disable output buffering yang bisa menyebabkan masalah
output_buffering = Off